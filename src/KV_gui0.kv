
<login_page>:
	orientation: 'horizontal'
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'data/images/bg.png' if app.platform == 'android' else 'data/images/bg pc.png'
	MDBoxLayout:
		orientation: "horizontal"
		# md_bg_color: 0.07450980392, 0.03137254902, 0.19215686275, 1
		pos: self.pos
		size: self.size
		MDBoxLayout:
			
			id: box_top
			adaptive_height: True
			pos_hint:{'center_x': 0.5, 'center_y': 0.59}

			Image:
				source: "data/images/no_bg.gif"
				size_hint_y: None
				height: dp(200)
				allow_stretch: True
				# keep_data: True
				anim_delay: 0.03
	MDTextField:
		id: user_name
		hint_text: "Enter Username"
		color_mode: "custom"
		required: True
		mode: "fill"
		font_size: "18sp"
		helper_text_mode: "on_error"
		helper_text: "*REQUIRED"
		current_hint_text_color: 1, 1, 1, .9
		icon_right: "account"
		icon_right_color: 1, 1, 1, 1
		line_color_focus: 0.3, 0.5, 0.9, 1
		line_color_normal: 0.8, 0.8, 0.8, 1
		text_color: 1,1,1, 1
		fill_color: .8, .8, .8, .2
		pos_hint:{'center_x': 0.5, 'center_y': 0.4}
		size_hint_x: 0.9
		size_hint_y: None
		shorten: True
		shorten_from: 'right'
		size_hint_max_x: "600px"
		width: "500dp" if app.platform=='android' else '500dp'
	
	MDRaisedButton:
		text: '   Log in   '
		pos_hint:{'center_x': 0.5, 'center_y': 0.25}
		on_release: app.set_username(root.ids.user_name.text)

<welcome_page>:
	MDBoxLayout:
		orientation: "horizontal"
		md_bg_color: 1, 1, 1, 1
		pos: self.pos
		size: self.size

	MDRaisedButton:
		text: "   Let's go   "
		pos_hint:{'center_x': 0.5, 'center_y': 0.35}
		on_release: app.lets_go_btn()
	MDBoxLayout:

		adaptive_height: True
		pos_hint:{'center_x': 0.5, 'center_y': 0.6}

		Image:
			source: "data/images/emo angel.png"
			size_hint: 3,3


	MDBoxLayout:
		orientation: "horizontal"

		adaptive_height: True
		pos_hint:{'center_x': 0.5, 'center_y': 0.2}

	

		MDLabel:
			text: "Welcome to\nProject Alice\nby Team JARVIS"
			halign: "center"
			valign: "center"
			font_style: 'H4'



<chat_page>:
	orientation: 'horizontal'
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'data/images/bg.png' if app.platform == 'android' else 'data/images/bg pc.png'
	#MDBoxLayout:
	ImageButton:
		id: mute_btn
		source: "data/images/unmute.png"
		size_hint: .3,.3
		#font_size: "100sp"
		pos_hint:{'center_x': 0.5, 'center_y': 0.8}
		#font_style: 'H3'
		on_release:
			app.mute_btn()
	MDFloatLayout:
		size_hint: 1, 0.1
		orientation: 'horizontal'
		pos_hint:{'center_x': 0.5, 'center_y': 0.4}
		#size_hint_x: 0.7
		size_hint_y: None
		size_hint_max_x: "650px"
		size_hint_min_x: "500px"

		MDTextField:
			id: message
			hint_text: "Send a message"
			color_mode: "custom"
			required: True
			mode: "fill"
			font_size: "18sp"
			helper_text_mode: "on_error"
			helper_text: "*REQUIRED"
			current_hint_text_color: 1, 1, 1, .9
			# icon_right: "arch"
			# icon_right_color: 1, 1, 1, 1
			line_color_focus: 0.3, 0.5, 0.9, 1
			line_color_normal: 0.8, 0.8, 0.8, 1
			text_color: 1,1,1, 1
			fill_color: .8, .8, .8, .2
			pos_hint:{'center_x': 0.5, 'center_y': 0.4}
			size_hint_x: 0.9
			size_hint_y: None
			shorten: True
			shorten_from: 'right'
			size_hint_max_x: "600px"
			width: "500dp" if app.platform=='android' else '500dp'

		MDIconButton:
			icon: "arch"
			theme_icon_color: "Custom"
			theme_text_color: "Custom"

			icon_color: 0,0,0, 1
			md_bg_color :1,1,1,1
			radius: [20]
			pos_hint:{'center_x': 1, 'center_y': 0.5}
			on_release: app.send_message(root.ids.message.text)
			canvas.before:
				PushMatrix
				Rotate:
					angle: 270
					origin: self.center
			canvas.after:
				PopMatrix



